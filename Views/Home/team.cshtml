
@{
    ViewBag.Title = "team";
    Layout = "~/Views/Shared/_home_layout.cshtml";
    var team = ViewBag.TeamMembers as List<sherkaty.Models.tbl_coll>;
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;

}





<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <!-- Page Header Box Start -->
                <div class="page-header-box">
                    <h1 class="text-anime-style-2" data-cursor="-opaque">تیم ما</h1>
                    <nav class="wow fadeInUp">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index">صفحه اصلی</a></li>
                            <li class="breadcrumb-item active" aria-current="page">تیم ما</li>
                        </ol>
                    </nav>
                </div>
                <!-- Page Header Box End -->
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Page Team Start -->
<div class="page-team">
    <div class="container">
        <div class="row">

            @foreach (var member in team)
            {
                <div class="col-lg-4 col-md-6">
                    <!-- Team Member Item Start -->
                    <div class="team-member-item wow fadeInUp">
                        <!-- Team Image Start -->
                        <div class="team-image">
                            <a href="@Url.Action("team_single", "Home", new { id = member.coid })" data-cursor-text="نمایش">
                                <figure class="image-anime">
                                    <img src="@Url.Content(string.IsNullOrEmpty(member.coimgpth) ? "~/styles/home/images/contact.png" : "~/styles/home/images/" + member.coimgpth)" alt="@member.coname @member.cofamily">

                                </figure>
                            </a>
                        </div>
                        <!-- Team Image End -->
                        <!-- Team Body Start -->
                        <div class="team-body">
                            <!-- Team Content Start -->
                            <div class="team-content">
                                <h3><a href="@Url.Action("team_single", "Home", new { id = member.coid })">@member.coname @member.cofamily</a></h3>
                                <p>@member.coposition</p>
                            </div>
                            <!-- Team Content End -->

                        </div>
                        <!-- Team Body End -->
                    </div>
                    <!-- Team Member Item End -->
                </div>
            }
        </div>
    </div>
</div>
<!-- Page Team End -->
<!-- Pagination links -->
<nav aria-label="Page navigation" class="rtl-paginator">
    <ul class="pagination justify-content-center modern-paginator" dir="ltr">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("team", new { page = currentPage - 1 })" tabindex="-1">
                <i class="bi bi-chevron-left"></i> صفحه قبل
            </a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("team", new { page = i })">@i</a>
            </li>
        }

        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("team", new { page = currentPage + 1 })">
                صفحه بعد <i class="bi bi-chevron-right"></i>
            </a>
        </li>
    </ul>
</nav>

