
@{
    ViewBag.Title = "edteam";
    Layout = "~/Views/Shared/_admin_layout.cshtml";
    var team = ViewBag.TeamMembers as List<sherkaty.Models.tbl_coll>;
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>مدیریت اعضای تیم</title>
    <link href="~/styles/home/css/all.min.css" rel="stylesheet" />
    <link href="~/styles/admin/css/tailwind.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Vazir', sans-serif;
            background-color: #f8fafc;
        }

        .team-card {
            transition: all 0.3s ease;
            border-radius: 16px;
            overflow: hidden;
        }

            .team-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            }

        .team-image-container {
            height: 240px;
            overflow: hidden;
        }

        .team-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .team-card:hover .team-image {
            transform: scale(1.05);
        }

        .add-member-btn {
            position: fixed;
            bottom: 2rem;
            left: 2rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.875rem 1.5rem;
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            font-weight: 600;
            border-radius: 12px;
            box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.3);
            transition: all 0.3s ease;
            z-index: 10;
        }

            .add-member-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 20px -3px rgba(59, 130, 246, 0.4);
            }

            .add-member-btn:active {
                transform: scale(0.97);
            }

        .rtl-paginator .pagination {
            display: flex;
            justify-content: center;
            gap: 0.25rem;
            margin: 2rem 0;
            direction: rtl;
            flex-direction: row-reverse;
        }

        .rtl-paginator .page-item {
            display: inline-block;
            float: none;
        }

        .page-link {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background-color: white;
            color: #1e40af;
            font-weight: 600;
            transition: all 0.2s ease;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }

            .page-link:hover {
                background-color: #e0e7ff;
            }

        .page-item.active .page-link {
            background-color: #3b82f6;
            color: white;
        }

        .page-item.disabled .page-link {
            color: #9ca3af;
            pointer-events: none;
            background-color: #f3f4f6;
        }

        .page-nav-link {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 1rem;
            height: 40px;
            border-radius: 10px;
            background-color: white;
            color: #1e40af;
            font-weight: 600;
            transition: all 0.2s ease;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }

            .page-nav-link:hover {
                background-color: #e0e7ff;
            }

        .page-item.disabled .page-nav-link {
            color: #9ca3af;
            pointer-events: none;
            background-color: #f3f4f6;
        }

        .badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            padding: 0.25rem 0.75rem;
            background-color: #3b82f6;
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: 9999px;
            box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3);
        }

        .header-section {
            background: linear-gradient(135deg, #4f46e5, #3b82f6);
            padding: 2.5rem 0;
            margin-bottom: 2rem;
            color: white;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="header-section">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold">مدیریت اعضای تیم</h1>
                    <p class="text-blue-100 mt-2">مشاهده و ویرایش اطلاعات اعضای تیم</p>
                </div>
                <a href="add_team" class="bg-white text-blue-600 px-5 py-3 rounded-lg font-bold flex items-center gap-2 hover:bg-blue-50 transition-all">
                    <i class="fas fa-user-plus"></i>
                    <span>اضافه کردن عضو جدید</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Team Members Grid -->
    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var i in team)
            {
                <div class="team-card bg-white shadow-md">
                    <div class="relative team-image-container">
                        <a href="@Url.Action("edteam_single", "admin", new { id = i.coid })">
                            <img src="@(
                                Url.Content(string.IsNullOrEmpty(i.coimgpth)
                                    ? "~/styles/home/images/contact.png"
                                    : "~/styles/home/images/" + i.coimgpth)
                                + "?v=" + DateTime.Now.Ticks
                            )"
                                 class="team-image"
                                 alt="@i.coname @i.cofamily" />
                            <div class="badge">
                                <i class="fas fa-eye ml-1"></i> نمایش
                            </div>
                        </a>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-800 mb-2">
                            <a href="@Url.Action("edteam_single", "admin", new { id = i.coid })" class="hover:text-blue-600 transition-colors">
                                @i.coname @i.cofamily
                            </a>
                        </h3>
                        <p class="text-blue-600 font-medium">@i.coposition</p>
                        <div class="mt-4 pt-4 border-t border-gray-100 flex justify-end">
                            <a href="@Url.Action("edteam_single", "admin", new { id = i.coid })" class="text-blue-600 hover:text-blue-800 flex items-center gap-1 font-medium">
                                <span>ویرایش اطلاعات</span>
                                <i class="fas fa-chevron-left text-xs"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <div class="mt-12">
            <nav aria-label="Page navigation" class="rtl-paginator">
                <ul class="pagination">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-nav-link" href="@Url.Action("edteam", new { page = currentPage - 1 })">

                            قبلی
                            <i class="fas fa-chevron-left mr-1"></i>
                        </a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("edteam", new { page = i })">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-nav-link" href="@Url.Action("edteam", new { page = currentPage + 1 })">
                            <i class="fas fa-chevron-right ml-1"></i>
                            بعدی

                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <!-- Mobile Add Button -->
    <a href="add_team" class="add-member-btn md:hidden">
        <i class="fas fa-user-plus"></i>
        <span>عضو جدید</span>
    </a></body>
</html>

