@model sherkaty.Models.tbl_blog
@{
    ViewBag.Title = "add_blog";

    Layout = "~/Views/Shared/_admin_layout.cshtml";
}



<head>

    <title>فرم اضافه کردن عضو جدید</title>


    <style>
        /* Font will be loaded via link tag in head */

        :root {
            --primary-color: #7c3aed;
            --primary-hover: #6d28d9;
            --secondary-color: #f5f3ff;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --border-color: #e5e7eb;
            --success-color: #10b981;
        }

        body {
            background: linear-gradient(135deg, #f5f3ff 0%, #ede9fe 100%);
            padding: 40px 0;
            font-family: 'Inter', sans-serif;
            color: var(--text-primary);
            min-height: 100vh;
        }

        .form-container {
            background-color: white;
            border-radius: 16px;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 10px 10px -5px rgba(0, 0, 0, 0.02);
            padding: 48px;
            max-width: 800px;
            margin: 0 auto;
            border: 1px solid var(--border-color);
        }

        .form-header {
            margin-bottom: 40px;
            text-align: center;
        }

            .form-header h2 {
                color: var(--text-primary);
                font-weight: 700;
                font-size: 28px;
                margin-bottom: 12px;
            }

            .form-header p {
                color: var(--text-secondary);
                font-size: 16px;
            }

        .form-label {
            font-weight: 500;
            color: var(--text-primary);
            margin-bottom: 8px;
            font-size: 14px;
            letter-spacing: 0.025em;
        }

        .form-control {
            border-radius: 10px;
            padding: 14px 16px;
            border: 1px solid var(--border-color);
            transition: all 0.2s ease;
            font-size: 15px;
            background-color: #fcfcfc;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.15);
                background-color: white;
            }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            border-radius: 10px;
            padding: 14px 28px;
            font-weight: 600;
            transition: all 0.3s ease;
            font-size: 16px;
            letter-spacing: 0.01em;
        }

            .btn-primary:hover {
                background-color: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(124, 58, 237, 0.25);
            }

        .image-preview {
            width: 100%;
            height: 420px;
            border: 2px dashed #d1d5db;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 24px;
            overflow: hidden;
            position: relative;
            transition: all 0.3s ease;
            background-color: #fcfcfc;
        }

            .image-preview:hover {
                border-color: var(--primary-color);
                background-color: rgba(124, 58, 237, 0.02);
            }

            .image-preview img {
                max-width: 100%;
                max-height: 100%;
                display: block;
                object-fit: contain;
                width: auto
            }

        .image-preview-text {
            color: var(--text-secondary);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .image-preview-text svg {
                margin-bottom: 12px;
                color: #9ca3af;
            }

        .custom-file-upload {
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 12px 24px;
            background-color: var(--secondary-color);
            border-radius: 10px;
            color: var(--primary-color);
            font-weight: 500;
            transition: all 0.3s ease;
            border: 1px solid rgba(124, 58, 237, 0.2);
        }

            .custom-file-upload:hover {
                background-color: #ede9fe;
                transform: translateY(-1px);
            }

            .custom-file-upload svg {
                margin-right: 8px;
            }

        #file-upload {
            display: none;
        }

        .form-floating {
            position: relative;
        }

            .form-floating label {
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                padding: 14px 16px;
                pointer-events: none;
                border: 1px solid transparent;
                transform-origin: 0 0;
                transition: opacity .1s ease-in-out,transform .1s ease-in-out;
                color: var(--text-secondary);
            }

            .form-floating .form-control:focus ~ label,
            .form-floating .form-control:not(:placeholder-shown) ~ label {
                opacity: .65;
                transform: scale(.85) translateY(-0.5rem) translateX(0.15rem);
                background-color: white;
                padding: 0 5px;
                height: auto;
                margin-left: 10px;
            }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .success-message {
            display: none;
            background-color: #ecfdf5;
            border: 1px solid #10b981;
            color: #065f46;
            padding: 16px;
            border-radius: 10px;
            margin-top: 20px;
            text-align: center;
            font-weight: 500;
        }

            .success-message svg {
                color: var(--success-color);
                margin-right: 8px;
            }

        .section-divider {
            margin: 30px 0;
            border-top: 1px solid var(--border-color);
            position: relative;
        }
        }
    </style>
</head>


@using (Html.BeginForm("add_blog", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.img, new { @value = "" })


    <div class="container">
        <div class="form-container">
            <div class="form-header">
                <h2>فرم اضافه کردن عضو جدید</h2>
                <p>لطفا تمام قسمت های فرم را پر کنید</p>
            </div>

            <div class="row mb-4">
                <div class=" mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.btitle, new { @class = "form-control", placeholder = " " })
                        <label for="coname">تایتل اصلی</label>
                    </div>
                </div>

            </div>


            <div class="mb-4">
                <div class="form-floating">
                    @Html.TextAreaFor(m => m.firsttext, new { @class = "form-control", placeholder = " ", style = "height:150px" })
                    <label for="coabout">متن اول</label>
                </div>
            </div>


            <div class="mb-4">
                <div class="form-floating">
                    @Html.TextAreaFor(m => m.bold, new { @class = "form-control", placeholder = " ", style = "height:150px" })
                    <label for="coabout">متن بولد شده</label>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-floating">
                    @Html.TextAreaFor(m => m.sectext, new { @class = "form-control", placeholder = " ", style = "height:150px" })
                    <label for="coabout">متن دوم</label>
                </div>
            </div>




            <div class="row mb-4">
                <div class="mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.sectitle, new { @class = "form-control", placeholder = " " })
                        <label for="coname">تایتل دوم</label>
                    </div>
                </div>

            </div>



            <div class="mb-4">
                <div class="form-floating">
                    @Html.TextAreaFor(m => m.thtext, new { @class = "form-control", placeholder = " ", style = "height:150px" })
                    <label for="coabout">متن سوم</label>
                </div>
            </div>



            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.c1, new { @class = "form-control", placeholder = " " })
                        <label for="coname">ویژگی اول</label>
                    </div>
                </div>


                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.c2, new { @class = "form-control", placeholder = " " })
                        <label for="coname">ویژگی دوم</label>
                    </div>
                </div>

            </div>

            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.c3, new { @class = "form-control", placeholder = " " })
                        <label for="coname">ویژگی سوم</label>
                    </div>
                </div>


                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.c4, new { @class = "form-control", placeholder = " " })
                        <label for="coname">ویژگی چهارم</label>
                    </div>
                </div>

            </div>

            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.c5, new { @class = "form-control", placeholder = " " })
                        <label for="coname">ویژگی پنجم</label>
                    </div>
                </div>

            </div>


            <div class="mb-4">
                <div class="form-floating">
                    @Html.TextAreaFor(m => m.ltext, new { @class = "form-control", placeholder = " ", style = "height:150px" })
                    <label for="coabout">متن اخر</label>
                </div>
            </div>


            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.dateday, new { @class = "form-control", placeholder = " " })
                        <label for="coname">روز</label>
                    </div>
                </div>



                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.datemon, new { @class = "form-control", placeholder = " " })
                        <label for="coname">ماه </label>
                    </div>
                </div>

            </div>
            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="form-floating">
                        @Html.TextBoxFor(m => m.dateye, new { @class = "form-control", placeholder = " " })
                        <label for="coname">سال</label>
                    </div>
                </div>

            </div>





            <!-- Submit -->
            <div class="d-grid gap-2 mt-5">
                <button type="submit" class="btn btn-primary">
                    تایید
                </button>
            </div>

            <!-- Success Message -->
            <div class="success-message" id="success-message">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                </svg>
                فرد مورد نظر با موفقیت اضافه شد
            </div>
        </div>
    </div>
}
